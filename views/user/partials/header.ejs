<script>
  // User dropdown functionality
  let dropdownOpen = false;
  const dropdownMenu = document.getElementById('user-dropdown-menu');
  const dropdownBtn = document.getElementById('user-dropdown-btn');
  const dropdownChevron = document.getElementById('dropdown-chevron');

  function toggleUserDropdown() {
    dropdownOpen = !dropdownOpen;
    
    if (dropdownOpen) {
      dropdownMenu.classList.remove('hidden');
      dropdownChevron.classList.add('rotate-180');
      
      // Close dropdown when clicking outside
      setTimeout(() => {
        document.addEventListener('click', closeDropdownOnClickOutside);
      }, 10);
    } else {
      closeUserDropdown();
    }
  }
  function handleGuestWishlist() {
  if (typeof showNotification === 'function') {
    showNotification('Please login to view your wishlist â¤ï¸', 'error');
  }
  // âŒ NO redirect
  return;
}

function handleGuestCart() {
  if (typeof showNotification === 'function') {
    showNotification('Please login to view your cart ðŸ›’', 'error');
  }
  // âŒ NO redirect
  return;
}


  function closeUserDropdown() {
    dropdownOpen = false;
    dropdownMenu.classList.add('hidden');
    dropdownChevron.classList.remove('rotate-180');
    document.removeEventListener('click', closeDropdownOnClickOutside);
  }

  function closeDropdownOnClickOutside(event) {
    const dropdownContainer = document.getElementById('user-dropdown-container');
    if (!dropdownContainer.contains(event.target)) {
      closeUserDropdown();
    }
  }

  // Close dropdown when pressing Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape' && dropdownOpen) {
      closeUserDropdown();
    }
  });

  // Close dropdown when navigating to a link inside it
  document.querySelectorAll('#user-dropdown-menu a').forEach(link => {
    link.addEventListener('click', () => {
      closeUserDropdown();
    });
  });

  // Existing search functions
  function toggleMobileSearch() {
    const container = document.getElementById('mobile-search-container');
    const btn = document.getElementById('mobile-search-btn');
    
    container.classList.toggle('hidden');
    
    if (!container.classList.contains('hidden')) {
      setTimeout(() => {
        const mobileSearch = document.getElementById('mobile-search');
        mobileSearch.focus();
        updateClearButtonVisibility(mobileSearch, 'clear-mobile-search');
      }, 100);
    }
  }
function confirmLogout() {
  Swal.fire({
    title: 'Confirm Logout',
    html: `
      <p class="mb-2">Are you sure you want to log out?</p>
      <small class="text-gray-500">You will need to sign in again.</small>
    `,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Yes, Logout',
    cancelButtonText: 'Cancel',
    confirmButtonColor: '#d4af37',   // gold theme
    cancelButtonColor: '#6b7280',
    reverseButtons: true,
    backdrop: true
  }).then((result) => {
    if (result.isConfirmed) {
      Swal.fire({
        title: 'Logging out...',
        allowOutsideClick: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });

      // Redirect after short delay
      setTimeout(() => {
        window.location.href = '/user/logout';
      }, 800);
    }
  });
}
  function performHeaderSearch() {
    const searchInput = document.getElementById('header-search') || document.getElementById('mobile-search');
    const query = searchInput.value.trim();
    
    // Get current URL parameters
    const currentParams = new URLSearchParams(window.location.search);
    
    if (query) {
      // Update search parameter
      currentParams.set('search', query);
    } else {
      // Remove search parameter if empty
      currentParams.delete('search');
    }
    
    // Reset to page 1 when searching
    currentParams.set('page', '1');
    
    // Navigate to shop with all parameters preserved
    window.location.href = `/user/shop?${currentParams.toString()}`;
  }

  function clearSearch() {
    const headerSearch = document.getElementById('header-search');
    headerSearch.value = '';
    headerSearch.focus();
    
    // Hide clear button
    document.getElementById('clear-search').classList.add('opacity-0', 'pointer-events-none');
    document.getElementById('clear-search').classList.remove('opacity-100', 'pointer-events-auto');
    
    // Perform search immediately after clearing
    performHeaderSearch();
  }

  function clearMobileSearch() {
    const mobileSearch = document.getElementById('mobile-search');
    mobileSearch.value = '';
    mobileSearch.focus();
    
    // Hide clear button
    document.getElementById('clear-mobile-search').classList.add('opacity-0', 'pointer-events-none');
    document.getElementById('clear-mobile-search').classList.remove('opacity-100', 'pointer-events-auto');
    
    // Perform search immediately after clearing
    performHeaderSearch();
  }

  function updateClearButtonVisibility(inputElement, clearButtonId) {
    const clearButton = document.getElementById(clearButtonId);
    
    if (inputElement.value.trim() !== '') {
      clearButton.classList.remove('opacity-0', 'pointer-events-none');
      clearButton.classList.add('opacity-100', 'pointer-events-auto');
    } else {
      clearButton.classList.add('opacity-0', 'pointer-events-none');
      clearButton.classList.remove('opacity-100', 'pointer-events-auto');
    }
  }

  // Allow Enter key to trigger search
  document.addEventListener('DOMContentLoaded', function() {
    const headerSearch = document.getElementById('header-search');
    const mobileSearch = document.getElementById('mobile-search');
    
    // Get search query from URL
    const urlParams = new URLSearchParams(window.location.search);
    const searchQuery = urlParams.get('search');
    
    // Set search input value if query exists
    if (searchQuery && headerSearch) {
      headerSearch.value = decodeURIComponent(searchQuery);
      updateClearButtonVisibility(headerSearch, 'clear-search');
    }
    
    if (searchQuery && mobileSearch) {
      mobileSearch.value = decodeURIComponent(searchQuery);
      updateClearButtonVisibility(mobileSearch, 'clear-mobile-search');
    }
    
    // Initialize clear button visibility
    if (headerSearch) {
      headerSearch.addEventListener('input', function() {
        updateClearButtonVisibility(this, 'clear-search');
      });
      
      headerSearch.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') performHeaderSearch();
      });
    }
    
    if (mobileSearch) {
      mobileSearch.addEventListener('input', function() {
        updateClearButtonVisibility(this, 'clear-mobile-search');
      });
      
      mobileSearch.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') performHeaderSearch();
      });
    }
  });
</script>

