<!-- views/user/pages/withdraw.ejs -->
<main class="min-h-screen bg-gradient-to-br from-[#0a0a0a] via-[#0f0f0f] to-[#1a1a1a] text-white antialiased">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header with back button -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <a href="/user/referrals" class="text-gray-400 hover:text-white flex items-center gap-2 mb-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Referrals
        </a>
        <h1 class="text-3xl font-bold text-white">Withdraw Funds</h1>
        <p class="text-gray-400 mt-2">Withdraw your referral earnings to your bank account or UPI</p>
      </div>
      <div class="text-right">
        <p class="text-gray-400 text-sm">Available Balance</p>
        <p class="text-[#d4af37] text-2xl font-bold">₹<%= user.walletBalance.toLocaleString('en-IN') %></p>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Available Balance -->
      <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] border border-[#2a2a2a] rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Available Balance</p>
            <p class="text-[#d4af37] text-2xl font-bold mt-2">₹<%= stats.availableBalance.toLocaleString('en-IN') %></p>
          </div>
          <div class="w-12 h-12 rounded-lg bg-[#d4af37]/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <p class="text-gray-400 text-xs mt-3">Minimum withdrawal: ₹100</p>
      </div>

      <!-- Total Withdrawn -->
      <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] border border-[#2a2a2a] rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Total Withdrawn</p>
            <p class="text-green-400 text-2xl font-bold mt-2">₹<%= stats.totalWithdrawn.toLocaleString('en-IN') %></p>
          </div>
          <div class="w-12 h-12 rounded-lg bg-green-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending Withdrawal -->
      <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] border border-[#2a2a2a] rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Pending Withdrawal</p>
            <p class="text-yellow-400 text-2xl font-bold mt-2">₹<%= stats.pendingWithdrawal.toLocaleString('en-IN') %></p>
          </div>
          <div class="w-12 h-12 rounded-lg bg-yellow-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Withdrawal Form -->
    <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] border border-[#2a2a2a] rounded-2xl p-6 mb-8">
      <h2 class="text-xl font-bold text-white mb-6">Request Withdrawal</h2>
      
      <form id="withdrawalForm">
        <!-- Amount -->
        <div class="mb-6">
          <label class="block text-gray-300 mb-3">Withdrawal Amount (₹)</label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400">₹</span>
            <input 
              type="number" 
              id="amount" 
              name="amount"
              min="100"
              max="<%= stats.availableBalance %>"
              step="1"
              placeholder="Enter amount"
              class="w-full bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg py-3 px-12 text-white placeholder-gray-500 focus:border-[#d4af37] focus:outline-none transition-all"
              required
            >
            <button 
              type="button" 
              onclick="setMaxAmount()"
              class="absolute right-4 top-1/2 transform -translate-y-1/2 text-[#d4af37] hover:text-[#b8941f] text-sm font-medium"
            >
              MAX
            </button>
          </div>
          <div class="flex justify-between text-sm text-gray-400 mt-2">
            <span>Min: ₹100</span>
            <span id="availableBalance">Available: ₹<%= stats.availableBalance.toLocaleString('en-IN') %></span>
          </div>
        </div>

        <!-- Payment Method -->
        <div class="mb-6">
          <label class="block text-gray-300 mb-3">Payment Method</label>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% withdrawalMethods.forEach(method => { %>
              <label class="payment-method-item relative">
                <input 
                  type="radio" 
                  name="payment_method" 
                  value="<%= method.value %>" 
                  class="hidden peer"
                  required
                >
                <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg p-4 cursor-pointer hover:border-[#d4af37]/30 peer-checked:border-[#d4af37] peer-checked:bg-[#d4af37]/5 transition-all">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-[#d4af37]/10 flex items-center justify-center">
                      <svg class="w-5 h-5 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <% if (method.icon === 'upi') { %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                        <% } else if (method.icon === 'bank') { %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                        <% } else { %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                        <% } %>
                      </svg>
                    </div>
                    <span class="text-white font-medium"><%= method.label %></span>
                  </div>
                </div>
                <div class="absolute top-3 right-3 hidden peer-checked:block">
                  <svg class="w-5 h-5 text-[#d4af37]" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </label>
            <% }) %>
          </div>
        </div>

        <!-- Payment Details (Dynamic) -->
        <div class="mb-6">
          <div id="paymentDetailsContainer">
            <!-- Payment details will be loaded here dynamically -->
          </div>
        </div>

        <!-- Terms -->
        <div class="mb-6 p-4 bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg">
          <label class="flex items-start gap-3 cursor-pointer">
            <input type="checkbox" id="terms" class="mt-1" required>
            <span class="text-gray-300 text-sm">
              I agree to the <a href="/terms" class="text-[#d4af37] hover:underline">Terms & Conditions</a>. 
              Withdrawals are processed within 24-48 hours. A minimum balance of ₹100 is required.
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full py-3 bg-gradient-to-r from-[#d4af37] to-[#b8941f] text-black font-bold rounded-lg hover:shadow-lg hover:shadow-[#d4af37]/30 transition-all flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
          Request Withdrawal
        </button>
      </form>
    </div>

    <!-- Recent Withdrawals -->
    <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] border border-[#2a2a2a] rounded-2xl p-6">
      <h2 class="text-xl font-bold text-white mb-6">Recent Withdrawals</h2>
      
      <% if (recentWithdrawals && recentWithdrawals.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-[#2a2a2a]">
                <th class="text-left py-3 px-4 text-gray-400 font-medium">Date</th>
                <th class="text-left py-3 px-4 text-gray-400 font-medium">Amount</th>
                <th class="text-left py-3 px-4 text-gray-400 font-medium">Method</th>
                <th class="text-left py-3 px-4 text-gray-400 font-medium">Status</th>
                <th class="text-left py-3 px-4 text-gray-400 font-medium">Action</th>
              </tr>
            </thead>
            <tbody>
              <% recentWithdrawals.forEach(withdrawal => { 
                const statusColors = {
                  'pending': 'yellow',
                  'approved': 'blue',
                  'processing': 'purple',
                  'completed': 'green',
                  'rejected': 'red',
                  'failed': 'red'
                };
                const statusLabels = {
                  'pending': 'Pending',
                  'approved': 'Approved',
                  'processing': 'Processing',
                  'completed': 'Completed',
                  'rejected': 'Rejected',
                  'failed': 'Failed'
                };
              %>
                <tr class="border-b border-[#2a2a2a]/50 hover:bg-[#1a1a1a]/50">
                  <td class="py-4 px-4 text-gray-300">
                    <%= new Date(withdrawal.createdAt).toLocaleDateString('en-IN', {
                      day: 'numeric',
                      month: 'short',
                      year: 'numeric'
                    }) %>
                  </td>
                  <td class="py-4 px-4">
                    <span class="text-[#d4af37] font-bold">₹<%= withdrawal.amount.toLocaleString('en-IN') %></span>
                  </td>
                  <td class="py-4 px-4 text-gray-300">
                    <% if (withdrawal.payment_method === 'upi') { %>
                      UPI
                    <% } else if (withdrawal.payment_method === 'bank_transfer') { %>
                      Bank Transfer
                    <% } else if (withdrawal.payment_method === 'paytm') { %>
                      Paytm
                    <% } else if (withdrawal.payment_method === 'phonepe') { %>
                      PhonePe
                    <% } else if (withdrawal.payment_method === 'gpay') { %>
                      Google Pay
                    <% } else { %>
                      <%= withdrawal.payment_method %>
                    <% } %>
                  </td>
                  <td class="py-4 px-4">
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-<%= statusColors[withdrawal.status] %>-500/10 text-<%= statusColors[withdrawal.status] %>-400 border border-<%= statusColors[withdrawal.status] %>-500/30">
                      <%= statusLabels[withdrawal.status] %>
                    </span>
                  </td>
                  <td class="py-4 px-4">
                    <% if (withdrawal.status === 'pending') { %>
                      <button 
                        onclick="cancelWithdrawal('<%= withdrawal._id %>')"
                        class="px-3 py-1 border border-[#2a2a2a] text-gray-300 hover:border-red-500/30 hover:text-red-400 rounded text-sm transition-all"
                      >
                        Cancel
                      </button>
                    <% } else if (withdrawal.status === 'completed') { %>
                      <span class="text-green-400 text-sm">✓ Completed</span>
                    <% } else if (withdrawal.status === 'rejected') { %>
                      <button 
                        onclick="viewReason('<%= withdrawal.rejection_reason %>')"
                        class="px-3 py-1 border border-[#2a2a2a] text-gray-300 hover:border-[#d4af37]/30 hover:text-[#d4af37] rounded text-sm transition-all"
                      >
                        View Reason
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="mt-6 text-center">
          <a 
            href="#" 
            onclick="loadMoreWithdrawals()"
            class="inline-flex items-center gap-2 text-[#d4af37] hover:text-[#b8941f] transition-colors"
          >
            View All Withdrawals
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[#d4af37]/10 flex items-center justify-center">
            <svg class="w-8 h-8 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">No Withdrawals Yet</h3>
          <p class="text-gray-400">Start by requesting your first withdrawal above</p>
        </div>
      <% } %>
    </div>
  </div>
</main>

<script>

</script>

<style>
.payment-method-item input:checked + div {
  border-color: #d4af37;
  background-color: rgba(212, 175, 55, 0.05);
}

.payment-method-item:hover div {
  border-color: rgba(212, 175, 55, 0.3);
}

input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type="number"] {
  -moz-appearance: textfield;
}
</style>