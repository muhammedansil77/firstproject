  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
    <% if (Array.isArray(products) && products.length) { %>
      <% products.forEach(function(prod) { 
          // FIX HERE: Check the actual data structure
          let thumb = '/uploads/placeholder.png';
          
          // Check if prod.images exists and has at least one item
          if (Array.isArray(prod.images) && prod.images.length > 0) {
            // Filter out null/undefined images
            const validImages = prod.images.filter(img => img && img.trim() !== '');
            if (validImages.length > 0) {
              thumb = validImages[0];
              // Add leading slash if missing (optional)
              if (!thumb.startsWith('http') && !thumb.startsWith('/')) {
                thumb = '/' + thumb;
              }
            }
          }
          
          // Get price - check both minPrice and price fields
          const price = prod.minPrice !== null ? prod.minPrice : (prod.price || null);
          
          // Debug logging (remove in production)
          console.log('Product:', prod.name, 'Image:', thumb, 'Price:', price);
      %>
        <div class="group cursor-pointer">
          <a href="/user/shop/<%= prod._id %>" class="block">
            <div class="relative rounded-2xl overflow-hidden border border-amber-500/20 hover:border-amber-400/50 transition-all duration-500 mb-6">
              <div class="aspect-square overflow-hidden bg-slate-900">
                <img src="<%= thumb %>" alt="<%= prod.name %>" loading="lazy" 
                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                     onerror="this.onerror=null; this.src='/uploads/placeholder.png';"/>
                <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-amber-500/10 to-transparent pointer-events-none"></div>
              </div>

              <!-- NEW badge -->
              <div class="absolute top-4 right-4 bg-amber-400 text-slate-900 px-3 py-1 rounded-full text-xs font-bold tracking-widest">
                NEW
              </div>
            </div>
          </a>

          <h3 class="text-lg font-bold text-white group-hover:text-amber-400 transition-colors mb-2">
            <a href="/user/shop/<%= prod._id %>">
              <%= prod.name && prod.name.length > 48 ? prod.name.slice(0,45) + '...' : (prod.name || 'Untitled') %>
            </a>
          </h3>

          <div class="flex items-baseline gap-2 mb-4">
            <% if (price !== null && price !== undefined) { %>
              <span class="text-2xl font-light text-amber-400">â‚¹<%= Number(price).toLocaleString('en-IN') %></span>
              <span class="text-sm text-gray-500">+GST</span>
            <% } else { %>
              <span class="text-sm text-gray-400">Price on request</span>
            <% } %>
          </div>

          <div class="h-1 w-0 bg-amber-400 group-hover:w-12 transition-all duration-300"></div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-span-full text-center text-gray-400 py-12">
        <% if (products === undefined) { %>
          <p class="text-lg">Products data not available</p>
          <p class="text-sm mt-2">Check if products array is being passed from controller</p>
        <% } else { %>
          No products found.
        <% } %>
      </div>
    <% } %>
  </div>
</section>

