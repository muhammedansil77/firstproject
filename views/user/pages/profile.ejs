      </div>

      <!-- Right Column: Account Settings -->
      <div class="space-y-8">
        <!-- Email Card -->
        <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] rounded-2xl border border-[#2a2a2a] p-6">
          <h2 class="text-xl font-bold text-white mb-6">Email </h2>
          
          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-500">Current Email</p>
              <p class="text-white font-medium"><%= user.email %></p>
            </div>
            
            <div>
              <p class="text-sm text-gray-500 mb-2">Email Status</p>
              <div class="inline-flex items-center gap-2 bg-green-500/10 text-green-400 px-3 py-1 rounded-full text-xs">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Verified
              </div>
            </div>
            
            <button onclick="openChangeEmailModal()"
                    class="w-full inline-flex items-center justify-center gap-2 px-4 py-2 border border-[#2a2a2a] text-gray-300 hover:text-[#d4af37] hover:border-[#d4af37]/50 rounded-lg font-medium text-sm transition-all duration-200 mt-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Change Email Address
            </button>
          </div>
        </div>

        <!-- Account Security -->
        <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] rounded-2xl border border-[#2a2a2a] p-6">
          <h2 class="text-xl font-bold text-white mb-6">Account Security</h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-white font-medium">Two-Factor Authentication</p>
                <p class="text-gray-500 text-sm">Add extra security to your account</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#d4af37]"></div>
              </label>
            </div>
            
            <div class="flex items-center justify-between">
              <div>
                <p class="text-white font-medium">Login Notifications</p>
                <p class="text-gray-500 text-sm">Get alerts for new logins</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked>
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#d4af37]"></div>
              </label>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
