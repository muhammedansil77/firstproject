                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    </button>
                  </div>
                  
                  <div class="space-y-2 text-sm">
                    <p class="text-gray-300"><%= addr.addressLine1 %></p>
                    <% if (addr.addressLine2) { %>
                      <p class="text-gray-400"><%= addr.addressLine2 %></p>
                    <% } %>
                    <p class="text-gray-400"><%= addr.city %>, <%= addr.state %> - <%= addr.postalCode %></p>
                    <p class="text-gray-300 font-medium"><%= addr.country %></p>
                    <p class="text-[#d4af37] font-medium"><%= addr.phone %></p>
