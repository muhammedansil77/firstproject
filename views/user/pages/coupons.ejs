<div class="max-w-6xl mx-auto px-4 py-8">
  <form method="GET" class="mb-6 flex gap-2">
  <input type="text"
         name="search"
         value="<%= search %>"
         placeholder="Search coupon..."
         class="border px-3 py-2 rounded w-full">

  <select name="status" class="border px-3 py-2 rounded">
    <option value="all" <%= status === 'all' ? 'selected' : '' %>>All</option>
    <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
    <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Inactive</option>
    <option value="expired" <%= status === 'expired' ? 'selected' : '' %>>Expired</option>
  </select>

  <button class="bg-black text-white px-4 py-2 rounded">
    Filter
  </button>
</form>

  <% if (coupons.length === 0) { %>
    <div class="text-center text-gray-500 py-10">
      No coupons available right now
    </div>
  <% } else { %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

      <% coupons.forEach(coupon => { %>

        <div class="border border-dashed border-gray-300 rounded-lg p-5 bg-white shadow-sm">

          <!-- Coupon Code -->
          <div class="flex items-center justify-between mb-3">
            <span class="text-sm text-gray-500">Coupon Code</span>
            <span class="bg-black text-white text-xs px-3 py-1 rounded tracking-wider">
              <%= coupon.code %>
            </span>
          </div>

          <!-- Coupon Name -->
          <h3 class="text-lg font-semibold text-gray-800 mb-1">
            <%= coupon.name %>
          </h3>

          <!-- Description -->
          <p class="text-sm text-gray-600 mb-4">
            <%= coupon.description %>
          </p>

          <!-- Discount & Min Purchase -->
          <div class="flex justify-between items-center text-sm">
            <span class="text-green-600 font-medium">
              Save ₹<%= coupon.discountValue %>
            </span>
            <span class="text-gray-500">
              Min purchase ₹<%= coupon.minPurchaseAmount %>
            </span>
          </div>

        </div>

      <% }) %>

    </div>
    <!-- Pagination -->
<div class="flex justify-center mt-10 space-x-2">

  <% if (currentPage > 1) { %>
   <a href="?page=<%= currentPage - 1 %>&search=<%= search %>">
       class="px-3 py-1 border rounded text-gray-600 hover:bg-gray-100">
      Prev
    </a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
 <a href="?page=<%= i %>&search=<%= search %>">
       class="px-3 py-1 border rounded 
       <%= i === currentPage ? 'bg-black text-white' : 'text-gray-600 hover:bg-gray-100' %>">
      <%= i %>
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
<a href="?page=<%= currentPage + 1 %>&search=<%= search %>">

       class="px-3 py-1 border rounded text-gray-600 hover:bg-gray-100">
      Next
    </a>
  <% } %>

</div>

    

  <% } %>

</div>
