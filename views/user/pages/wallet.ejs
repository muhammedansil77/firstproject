<div class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 text-gray-100 antialiased">
    <div class="container mx-auto px-4 py-8 max-w-7xl">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-white">My Wallet</h1>
            <p class="text-gray-400 mt-2">Manage your funds and transaction history</p>
        </div>

        <!-- Balance Card - Premium Dark -->
        <div class="relative overflow-hidden rounded-2xl mb-10">
            <!-- Background Gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-amber-900/20 via-amber-800/10 to-transparent"></div>
            
            <!-- Main Card -->
            <div class="relative bg-gradient-to-br from-gray-900 to-gray-800 border border-amber-500/30 rounded-2xl p-8">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                    <div class="flex-1">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-12 h-12 rounded-xl bg-gradient-to-r from-amber-500 to-amber-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-amber-300 text-sm font-medium tracking-wider uppercase">Current Balance</p>
                                <p class="text-white text-5xl font-bold mt-2">₹<%= wallet.balance.toFixed(2) %></p>
                                <p class="text-gray-400 text-sm mt-3">Available for purchases & withdrawals</p>
                            </div>
                        </div>
                    </div>
                    
                    <button onclick="openAddMoneyModal()" 
                            class="px-8 py-4 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold rounded-xl hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-amber-500/30 flex items-center gap-3 group">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Add Money
                    </button>
                </div>
                
                <!-- Stats Row -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-8 pt-8 border-t border-gray-700/50">
                    <% 
                    // Calculate stats
                    const now = new Date();
                    const currentMonth = now.getMonth();
                    const currentYear = now.getFullYear();
                    
                    const monthlyAdded = wallet.transactions
                        .filter(tx => {
                            const txDate = new Date(tx.createdAt);
                            return (
                                tx.type === 'credit' && 
                                tx.status === 'success' &&
                                txDate.getMonth() === currentMonth &&
                                txDate.getFullYear() === currentYear
                            );
                        })
                        .reduce((sum, tx) => sum + tx.amount, 0);
                    
                    const totalCredits = wallet.transactions
                        .filter(tx => tx.type === 'credit' && tx.status === 'success')
                        .reduce((sum, tx) => sum + tx.amount, 0);
                    
                    const totalDebits = wallet.transactions
                        .filter(tx => tx.type === 'debit' && tx.status === 'success')
                        .reduce((sum, tx) => sum + tx.amount, 0);
                    %>
                    
                    <div class="text-center p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
                        <p class="text-gray-400 text-sm mb-2">This Month</p>
                        <p class="text-2xl font-bold text-amber-400">₹<%= monthlyAdded.toFixed(2) %></p>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
                        <p class="text-gray-400 text-sm mb-2">Total Credits</p>
                        <p class="text-2xl font-bold text-emerald-400">₹<%= totalCredits.toFixed(2) %></p>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
                        <p class="text-gray-400 text-sm mb-2">Total Debits</p>
                        <p class="text-2xl font-bold text-rose-400">₹<%= totalDebits.toFixed(2) %></p>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
                        <p class="text-gray-400 text-sm mb-2">Transactions</p>
                        <p class="text-2xl font-bold text-blue-400"><%= wallet.transactions.length %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Money Modal - Premium Dark -->
        <div id="addMoneyModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-50 p-4">
            <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-amber-500/30 p-6 w-full max-w-md relative">
                <!-- Close Button -->
                <button onclick="closeModal()" 
                        class="absolute -top-3 -right-3 w-10 h-10 bg-rose-600 text-white rounded-full hover:bg-rose-700 transition-all flex items-center justify-center shadow-lg">
                    &times;
                </button>
                
                <!-- Modal Header -->
                <div class="text-center mb-8">
                    <div class="w-16 h-16 rounded-full bg-gradient-to-r from-amber-500 to-amber-600 flex items-center justify-center mx-auto mb-4 shadow-lg shadow-amber-500/30">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-white">Add Money to Wallet</h3>
                    <p class="text-gray-400 mt-2">Select amount or enter custom</p>
                </div>
                
                <!-- Quick Amounts -->
                <div class="mb-8">
                    <p class="text-gray-400 text-sm mb-4 font-medium">Quick Select</p>
                    <div class="grid grid-cols-3 gap-3">
                        <% [100, 500, 1000, 2000, 5000, 10000].forEach(amount => { %>
                        <button type="button" 
                                onclick="setAmount(<%= amount %>)" 
                                class="px-4 py-3 bg-gray-800/50 border border-gray-700 text-gray-300 hover:border-amber-500/50 hover:text-amber-400 hover:bg-gray-800 rounded-lg transition-all duration-200 font-medium">
                            ₹<%= amount %>
                        </button>
                        <% }) %>
                    </div>
                </div>
                
                <!-- Custom Amount -->
                <div class="mb-8">
                    <label class="block text-gray-300 mb-3 font-medium">Custom Amount</label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-amber-400 font-bold">₹</span>
                        <input type="number" 
                               id="amountInput" 
                               name="amount"
                               min="10"
                               max="100000"
                               placeholder="Enter amount (min ₹10)"
                               class="w-full bg-gray-800/50 border border-gray-700 text-white rounded-xl p-4 pl-10 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-500/30 transition-all"
                               required>
                    </div>
                    <p class="text-gray-500 text-sm mt-3">
                        <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Minimum: ₹10 • Maximum: ₹1,00,000
                    </p>
                </div>
                
                <!-- Pay Button -->
                <button type="button" 
                        onclick="processPayment()" 
                        id="payButton"
                        class="w-full px-6 py-4 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold rounded-xl hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-amber-500/30 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:from-amber-500 disabled:hover:to-amber-600 flex items-center justify-center gap-3 group">
                    <span id="payButtonText">Pay Now</span>
                    <span id="payButtonLoading" class="hidden">
                        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </span>
                </button>
                
                <!-- Secure Payment Note -->
                <p class="text-center text-gray-500 text-xs mt-6">
                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Secured by Razorpay • PCI DSS compliant
                </p>
            </div>
        </div>

        <!-- Transaction History -->
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-gray-700/50 overflow-hidden">
            <!-- Header -->
            <div class="p-6 border-b border-gray-700/50 bg-gray-900/50">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div>
                        <h2 class="text-2xl font-bold text-white">Transaction History</h2>
                        <p class="text-gray-400 mt-2">All your wallet transactions in one place</p>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <button onclick="refreshTransactions()" 
                                class="px-4 py-2.5 bg-gray-800/50 border border-gray-700 text-gray-300 hover:border-amber-500/50 hover:text-amber-400 rounded-xl transition-all duration-200 flex items-center gap-2 font-medium">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Refresh
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Transactions Content -->
            <div class="divide-y divide-gray-700/30">
                <% if (wallet.transactions.length === 0) { %>
                    <!-- Empty State -->
                    <div class="p-12 text-center">
                        <div class="w-24 h-24 rounded-full bg-gradient-to-r from-gray-800 to-gray-900 border border-gray-700/50 flex items-center justify-center mx-auto mb-6">
                            <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">No transactions yet</h3>
                        <p class="text-gray-400 mb-8 max-w-md mx-auto">
                            Start by adding money to your wallet. Your transactions will appear here.
                        </p>
                        <button onclick="openAddMoneyModal()" 
                                class="px-8 py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold rounded-xl hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-amber-500/30 inline-flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Add Money Now
                        </button>
                    </div>
                <% } else { %>
                    <!-- Transactions Table -->
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-800/50">
                                    <th class="text-left p-4 text-gray-400 font-medium text-sm uppercase tracking-wider">Date & Time</th>
                                    <th class="text-left p-4 text-gray-400 font-medium text-sm uppercase tracking-wider">Description</th>
                                    <th class="text-left p-4 text-gray-400 font-medium text-sm uppercase tracking-wider">Amount</th>
                                    <th class="text-left p-4 text-gray-400 font-medium text-sm uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wallet.transactions.forEach(tx => { %>
                                    <tr class="border-b border-gray-700/30 hover:bg-gray-800/30 transition-colors duration-200">
                                        <td class="p-4">
                                            <div class="text-sm font-medium text-white">
                                                <%= new Date(tx.createdAt).toLocaleDateString('en-IN', { 
                                                    day: '2-digit', 
                                                    month: 'short', 
                                                    year: 'numeric' 
                                                }) %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= new Date(tx.createdAt).toLocaleTimeString('en-IN', { 
                                                    hour: '2-digit', 
                                                    minute: '2-digit' 
                                                }) %>
                                            </div>
                                        </td>
                                        <td class="p-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-lg <%= 
                                                    tx.type === 'credit' ? 'bg-emerald-500/10 border border-emerald-500/30' : 'bg-rose-500/10 border border-rose-500/30'
                                                %> flex items-center justify-center">
                                                    <svg class="w-5 h-5 <%= 
                                                        tx.type === 'credit' ? 'text-emerald-400' : 'text-rose-400'
                                                    %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= 
                                                            tx.type === 'credit' ? 'M12 19l9 2-9-18-9 18 9-2zm0 0v-8' : 'M13 17h8m0 0V9m0 8l-8-8-4 4-6-6'
                                                        %>"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p class="font-medium text-white"><%= tx.description %></p>
                                                    <% if (tx.paymentId) { %>
                                                        <div class="text-xs text-gray-500 mt-1 flex items-center gap-1">
                                                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                                                            </svg>
                                                            ID: <%= tx.paymentId.substring(0, 8) %>...
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p-4">
                                            <div class="flex items-center gap-3">
                                                <span class="text-lg font-bold <%= 
                                                    tx.type === 'credit' ? 'text-emerald-400' : 'text-rose-400'
                                                %>">
                                                    <%= tx.type === 'credit' ? '+' : '-' %>₹<%= tx.amount.toFixed(2) %>
                                                </span>
                                                <span class="px-3 py-1 rounded-full text-xs font-medium bg-gray-800/50 text-gray-300 border border-gray-700/50">
                                                    <%= tx.type === 'credit' ? 'Credit' : 'Debit' %>
                                                </span>
                                            </div>
                                        </td>
                                        <td class="p-4">
                                            <span class="px-3 py-1.5 rounded-full text-xs font-medium <%= 
                                                tx.status === 'success' ? 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/30' :
                                                tx.status === 'pending' ? 'bg-amber-500/10 text-amber-400 border border-amber-500/30' :
                                                'bg-rose-500/10 text-rose-400 border border-rose-500/30'
                                            %>">
                                                <%= tx.status.charAt(0).toUpperCase() + tx.status.slice(1) %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Footer -->
                    <div class="p-4 border-t border-gray-700/50 bg-gray-900/50">
                        <p class="text-sm text-gray-400">
                            Showing <%= wallet.transactions.length %> transaction<%= wallet.transactions.length !== 1 ? 's' : '' %>
                        </p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-gray-700/50 p-6">
                <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-r from-emerald-500/10 to-emerald-600/10 border border-emerald-500/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    Instant Processing
                </h3>
                <p class="text-gray-400">
                    Wallet recharges are processed instantly. Funds are available immediately after successful payment.
                </p>
            </div>
            
            <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-gray-700/50 p-6">
                <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-r from-amber-500/10 to-amber-600/10 border border-amber-500/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    Secure & Encrypted
                </h3>
                <p class="text-gray-400">
                    All transactions are secured with bank-level encryption. Your financial data is always protected.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Success Toast -->
<div id="successToast" class="fixed top-4 right-4 bg-gradient-to-r from-emerald-500 to-emerald-600 text-white p-4 rounded-xl shadow-2xl hidden z-50 max-w-sm border border-emerald-500/30 backdrop-blur-sm">
    <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <div class="flex-1">
            <p id="toastMessage" class="font-medium"></p>
        </div>
        <button onclick="hideToast()" class="ml-4 text-white/80 hover:text-white transition-colors text-xl">
            &times;
        </button>
    </div>
</div>

<!-- Error Toast -->
<div id="errorToast" class="fixed top-4 right-4 bg-gradient-to-r from-rose-500 to-rose-600 text-white p-4 rounded-xl shadow-2xl hidden z-50 max-w-sm border border-rose-500/30 backdrop-blur-sm">
    <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="flex-1">
            <p id="errorMessage" class="font-medium"></p>
        </div>
        <button onclick="hideErrorToast()" class="ml-4 text-white/80 hover:text-white transition-colors text-xl">
            &times;
        </button>
    </div>
</div>

<!-- Payment Failed Modal -->
<div id="paymentFailedModal" class="fixed inset-0 bg-black/90 backdrop-blur-sm hidden items-center justify-center z-50 p-4">
    <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-rose-500/30 p-8 w-full max-w-md text-center">
        <div class="w-20 h-20 rounded-full bg-gradient-to-r from-rose-500/10 to-rose-600/10 border border-rose-500/30 flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        
        <h3 class="text-2xl font-bold text-white mb-3">Payment Failed</h3>
        <p id="failedMessage" class="text-gray-400 mb-8">
            We encountered an issue processing your payment. Please try again.
        </p>
        
        <div class="space-y-4">
            <button onclick="retryPayment()" 
                    id="retryButton"
                    class="w-full px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold rounded-xl hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-amber-500/30">
                Try Again
            </button>
            
            <button onclick="closeFailedModal()" 
                    class="w-full px-6 py-3 bg-gray-800/50 border border-gray-700 text-gray-300 hover:border-gray-600 hover:text-white rounded-xl transition-all duration-200">
                Cancel
            </button>
        </div>
        
        <p class="text-gray-500 text-sm mt-8">
            Need help? Contact our support team.
        </p>
    </div>
</div>
<!-- Payment Success Modal -->
<div id="paymentSuccessModal" class="fixed inset-0 bg-black/90 backdrop-blur-sm hidden items-center justify-center z-50 p-4">
    <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl border border-emerald-500/30 p-8 w-full max-w-md text-center">
        <div class="w-20 h-20 rounded-full bg-gradient-to-r from-emerald-500/10 to-emerald-600/10 border border-emerald-500/30 flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
