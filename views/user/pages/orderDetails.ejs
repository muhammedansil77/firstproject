    <span class="text-gray-400">Order Status:</span>
    <span class="px-4 py-2 rounded-full text-sm font-bold <%= 
      order.orderStatus === 'Placed' ? 'bg-blue-500/10 text-blue-300 border border-blue-500/30' :
      order.orderStatus === 'Confirmed' ? 'bg-yellow-500/10 text-yellow-300 border border-yellow-500/30' :
      order.orderStatus === 'Shipped' ? 'bg-purple-500/10 text-purple-300 border border-purple-500/30' :
      order.orderStatus === 'Delivered' ? 'bg-green-500/10 text-green-300 border border-green-500/30' :
      order.orderStatus === 'Cancelled' ? 'bg-red-500/10 text-red-300 border border-red-500/30' :
      'bg-gray-500/10 text-gray-300 border border-gray-500/30'
    %>">
      <%= order.orderStatus || 'Placed' %>
    </span>
  </div>
  
  <!-- Refund Status (only if exists) -->
  <% if (refund && refund.status) { %>
  <div class="flex items-center gap-2">
    <span class="text-gray-400">Refund Status:</span>
    <span class="px-4 py-2 rounded-full text-sm font-bold <%= 
      refund.status === 'pending' ? 'bg-yellow-500/10 text-yellow-300 border border-yellow-500/30' :
      refund.status === 'approved' ? 'bg-green-500/10 text-green-300 border border-green-500/30' :
      refund.status === 'pickup_scheduled' ? 'bg-blue-500/10 text-blue-300 border border-blue-500/30' :
