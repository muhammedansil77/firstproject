      refund.status === 'refund_initiated' ? 'bg-indigo-500/10 text-indigo-300 border border-indigo-500/30' :
      refund.status === 'refund_completed' ? 'bg-emerald-500/10 text-emerald-300 border border-emerald-500/30' :
