<!-- Order Items Card - Show ONLY Selected Product -->
<div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] rounded-2xl border border-[#2a2a2a]">
  <div class="p-6 border-b border-[#2a2a2a]">
    <h2 class="text-xl font-bold text-white flex items-center gap-3">
      <div class="w-10 h-10 rounded-lg bg-[#d4af37]/10 flex items-center justify-center">
        <svg class="w-5 h-5 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
      </div>
      Product Details
      <% if (order.otherItemsCount > 0) { %>
        <span class="text-sm font-normal text-gray-400 ml-2">
          (1 of <%= order.otherItemsCount + 1 %> items)
        </span>
      <% } %>
    </h2>
  </div>
  
  <div class="p-6">
    <% if (order.item) { %>
    <div class="flex flex-col md:flex-row gap-6">
      <!-- Product Image -->
      <div class="w-full md:w-1/3">
        <div class="aspect-square rounded-xl overflow-hidden bg-[#1a1a1a]">
          <% if (order.item.imageSrc) { %>
            <img src="<%= order.item.imageSrc %>" 
                 alt="<%= order.item.product.name %>"
                 class="w-full h-full object-cover"
                 onerror="this.onerror=null; this.src='/uploads/placeholder.png';">
          <% } else { %>
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% } %>
        </div>
      </div>
      
      <!-- Product Info -->
      <div class="w-full md:w-2/3">
        <h3 class="text-2xl font-bold text-white mb-4"><%= order.item.product.name %></h3>
        
        <!-- Item Status Badge -->
        <% if (order.item.itemStatus) { %>
          <span class="inline-block mb-4 px-3 py-1 rounded-full text-xs font-semibold 
            <%= order.item.itemStatus === 'Delivered' ? 'bg-green-500/15 text-green-400 border border-green-400/40' : 
               order.item.itemStatus === 'Cancelled' ? 'bg-red-500/15 text-red-400 border border-red-400/40' : 
               order.item.itemStatus === 'Shipped' ? 'bg-purple-500/15 text-purple-400 border border-purple-400/40' : 
               'bg-yellow-500/15 text-yellow-400 border border-yellow-400/40' %>">
            <%= order.item.itemStatus %>
          </span>
        <% } %>
        
        <!-- Variant Details -->
        <% if (order.item.variant) { %>
        <div class="flex flex-wrap gap-4 mb-6">
          <% if (order.item.variant.color && order.item.variant.color !== 'null') { %>
          <div class="flex items-center gap-2">
            <span class="text-gray-400">Color:</span>
            <div class="flex items-center gap-2">
              <div class="w-6 h-6 rounded-full <%= 
                order.item.variant.color.toLowerCase().includes('black') ? 'bg-gray-800 border border-gray-600' :
                order.item.variant.color.toLowerCase().includes('white') ? 'bg-gray-300 border border-gray-400' :
                order.item.variant.color.toLowerCase().includes('red') ? 'bg-red-500' :
                order.item.variant.color.toLowerCase().includes('blue') ? 'bg-blue-500' :
                order.item.variant.color.toLowerCase().includes('green') ? 'bg-green-500' :
                'bg-gray-500'
              %>"></div>
              <span class="font-medium text-white"><%= order.item.variant.color %></span>
            </div>
          </div>
          <% } %>
          
          <% if (order.item.variant.size && order.item.variant.size !== 'null') { %>
          <div class="flex items-center gap-2">
            <span class="text-gray-400">Size:</span>
            <span class="font-medium text-white"><%= order.item.variant.size %></span>
          </div>
          <% } %>
          
          <div class="flex items-center gap-2">
            <span class="text-gray-400">Quantity:</span>
            <span class="font-medium text-white"><%= order.item.quantity %></span>
          </div>
        </div>
        <% } %>
        
        <!-- Price Details for this item -->
        <div class="space-y-3 mb-6 bg-[#1a1a1a] p-4 rounded-lg">
          <div class="flex justify-between">
            <span class="text-gray-400">Unit Price</span>
            <span class="text-[#d4af37] font-bold">
              ₹<%= (order.item.price || 0).toLocaleString('en-IN', { minimumFractionDigits: 2 }) %>
            </span>
          </div>
          <div class="flex justify-between border-t border-[#2a2a2a] pt-2">
            <span class="text-gray-400">Item Total</span>
            <span class="text-[#d4af37] font-bold text-lg">
              ₹<%= (order.item.total || 0).toLocaleString('en-IN', { minimumFractionDigits: 2 }) %>
            </span>
          </div>
        </div>
        
        <!-- Product Description -->
        <% if (order.item.product.description) { %>
        <div class="mb-6">
          <h4 class="text-lg font-bold text-white mb-2">Description</h4>
          <p class="text-gray-300"><%= order.item.product.description %></p>
        </div>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div class="text-center py-12">
      <p class="text-gray-400">Product details not available</p>
    </div>
    <% } %>
  </div>
</div>

<!-- Other Items in This Order (Sidebar or Bottom Section) -->
<% if (order.otherItems && order.otherItems.length > 0) { %>
<div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] rounded-2xl border border-[#2a2a2a] mt-8">
  <div class="p-6 border-b border-[#2a2a2a]">
    <h2 class="text-xl font-bold text-white flex items-center gap-3">
      <div class="w-10 h-10 rounded-lg bg-[#d4af37]/10 flex items-center justify-center">
        <svg class="w-5 h-5 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
        </svg>
      </div>
      Other Items in This Order (<%= order.otherItems.length %>)
    </h2>
  </div>
  
  <div class="divide-y divide-[#2a2a2a]">
    <% order.otherItems.forEach(item => { %>
    <div class="p-4 hover:bg-[#0f0f0f]/50 transition-colors">
      <div class="flex items-center gap-4">
        <!-- Thumbnail -->
        <div class="w-16 h-16 rounded-lg overflow-hidden bg-[#1a1a1a] flex-shrink-0">
          <img src="<%= item.product.image %>" 
               alt="<%= item.product.name %>"
               class="w-full h-full object-cover"
               onerror="this.src='/uploads/placeholder.png';">
        </div>
        
        <!-- Info -->
        <div class="flex-1">
          <h4 class="font-bold text-white"><%= item.product.name %></h4>
          <p class="text-sm text-gray-400">
            <%= item.variant.color || '' %> <%= item.variant.size ? '| ' + item.variant.size : '' %>
          </p>
          <p class="text-sm text-gray-400">Qty: <%= item.quantity %></p>
        </div>
        
        <!-- Price -->
        <div class="text-right">
          <p class="text-[#d4af37] font-bold">₹<%= (item.total || 0).toLocaleString('en-IN') %></p>
        </div>
        
        <!-- View Link -->
        <a href="/orders/<%= order._id %>?itemId=<%= item.orderItemId || item._id %>" 
           class="px-3 py-1 border border-[#2a2a2a] hover:border-[#d4af37]/30 rounded-lg text-sm text-gray-300 hover:text-[#d4af37] transition-all">
          View
        </a>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- Update the Order Summary to show per-item breakdown -->

     <div class="bg-gradient-to-br from-[#0b0b0b] to-[#151515] rounded-2xl border border-[#2a2a2a]">
  <div class="p-6 border-b border-[#2a2a2a]">
    <h2 class="text-xl font-bold text-white flex items-center gap-3">
      <div class="w-10 h-10 rounded-lg bg-[#d4af37]/10 flex items-center justify-center">
        <svg class="w-5 h-5 text-[#d4af37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      Order Timeline
    </h2>
  </div>
  
  <div class="p-6">
    <div class="relative">
      <!-- Vertical Timeline Line -->
      <div class="absolute left-6 top-0 bottom-0 w-0.5 bg-[#2a2a2a]"></div>
      
      <div class="space-y-10">
        <!-- Order Placed -->
        <div class="flex items-start relative">
          <div class="flex-shrink-0 relative z-10">
            <div class="w-12 h-12 rounded-full bg-green-500/10 border-2 border-green-500/30 flex items-center justify-center">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <!-- Connecting line down -->
            <div class="absolute left-1/2 top-full -translate-x-1/2 w-0.5 h-10 bg-green-500/30"></div>
          </div>
          <div class="ml-6">
            <h4 class="text-sm font-bold text-white">Order Placed</h4>
            <p class="text-sm text-gray-400 mt-1">
              <% if (order.createdAt) { %>
              <%= new Date(order.createdAt).toLocaleDateString('en-IN', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
              <% } else { %>
              Date not available
              <% } %>
            </p>
          </div>
        </div>
        
        <!-- Timeline Steps -->
        <% const timelineSteps = [
          { 
            status: 'Confirmed', 
            icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', 
            label: 'Order Confirmed', 
            description: 'Your order has been confirmed and is being processed', 
            color: 'yellow', 
            active: ['Confirmed', 'Shipped', 'OutForDelivery', 'Delivered'].includes(order.orderStatus),
            completed: ['Shipped', 'OutForDelivery', 'Delivered'].includes(order.orderStatus)
          },
          { 
            status: 'Shipped', 
            icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z', 
            label: 'Shipped', 
            description: 'Your order has been shipped', 
            color: 'purple', 
            active: ['Shipped', 'OutForDelivery', 'Delivered'].includes(order.orderStatus),
            completed: ['OutForDelivery', 'Delivered'].includes(order.orderStatus)
          },
          { 
            status: 'OutForDelivery', 
            icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z', 
            label: 'Out for Delivery', 
            description: 'Your order is out for delivery today', 
            color: 'orange', 
            active: ['OutForDelivery', 'Delivered'].includes(order.orderStatus),
            completed: order.orderStatus === 'Delivered'
          },
          { 
            status: 'Delivered', 
            icon: 'M5 13l4 4L19 7', 
            label: 'Delivered', 
            description: 'Your order has been successfully delivered', 
            color: 'green', 
            active: order.orderStatus === 'Delivered',
            completed: true
          }
        ] %>
        
        <% timelineSteps.forEach((step, index) => { %>
          <div class="flex items-start relative">
            <div class="flex-shrink-0 relative z-10">
              <% if (step.active) { %>
                <!-- Completed/Active Step -->
                <div class="w-12 h-12 rounded-full bg-<%= step.color %>-500/10 border-2 border-<%= step.color %>-500/30 flex items-center justify-center">
                  <svg class="w-5 h-5 text-<%= step.color %>-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= step.icon %>"/>
                  </svg>
                </div>
              <% } else { %>
                <!-- Inactive/Pending Step -->
                <div class="w-12 h-12 rounded-full bg-gray-800 border-2 border-gray-700 flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              <% } %>
              
              <!-- Connecting line down (except for last item) -->
              <% if (index < timelineSteps.length - 1) { %>
                <div class="absolute left-1/2 top-full -translate-x-1/2 w-0.5 h-10 
                  <%= step.completed ? 'bg-' + step.color + '-500/30' : 'bg-gray-700' %>">
                </div>
              <% } %>
            </div>
            
            <div class="ml-6">
              <div class="flex items-center gap-2">
                <h4 class="text-sm font-bold <%= step.active ? 'text-white' : 'text-gray-500' %>">
                  <%= step.label %>
                </h4>
                <% if (step.active && step.status === order.orderStatus) { %>
                  <span class="px-2 py-1 text-xs font-bold rounded-full bg-<%= step.color %>-500/20 text-<%= step.color %>-300">
                    Current
                  </span>
                <% } %>
              </div>
              <p class="text-sm <%= step.active ? 'text-gray-400' : 'text-gray-600' %> mt-1">
                <%= step.description %>
              </p>
            </div>
          </div>
        <% }) %>
        
        <!-- Cancelled Status (if applicable) -->
        <% if (order.orderStatus === 'Cancelled') { %>
          <div class="flex items-start relative">
            <div class="flex-shrink-0 relative z-10">
              <div class="w-12 h-12 rounded-full bg-red-500/10 border-2 border-red-500/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </div>
            </div>
            <div class="ml-6">
              <h4 class="text-sm font-bold text-red-400">Order Cancelled</h4>
              <p class="text-sm text-gray-400 mt-1">This order has been cancelled</p>
            </div>
          </div>
        <% } %>
        
        <!-- Estimated Delivery -->
        <% if (order.orderStatus !== 'Cancelled') { %>
          <div class="flex items-start relative">
            <div class="flex-shrink-0 relative z-10">
              <div class="w-12 h-12 rounded-full bg-blue-500/10 border-2 border-blue-500/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-6">
              <h4 class="text-sm font-bold text-white">Estimated Delivery</h4>
              <% if (order.createdAt) { 
                const deliveryDate = new Date(order.createdAt); 
                deliveryDate.setDate(deliveryDate.getDate() + 7); 
                const isDelivered = order.orderStatus === 'Delivered';
              %>
                <p class="text-sm <%= isDelivered ? 'text-green-400' : 'text-gray-400' %> mt-1">
                  <% if (isDelivered) { %>
                    <span class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      Delivered on <%= deliveryDate.toLocaleDateString('en-IN', { 
                        weekday: 'long', 
                        month: 'long', 
                        day: 'numeric',
                        year: 'numeric'
                      }) %>
                    </span>
                  <% } else { %>
                    <%= deliveryDate.toLocaleDateString('en-IN', { 
                      weekday: 'long', 
                      month: 'long', 
                      day: 'numeric' 
                    }) %>
                  <% } %>
                </p>
              <% } else { %>
                <p class="text-sm text-gray-400 mt-1">Date not available</p>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
