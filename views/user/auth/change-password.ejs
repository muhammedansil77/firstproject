<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Reset Password - LuxTime</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

 <link rel="stylesheet" href="/user/css/changepassword.css">
</head>

<body>
  <!-- Header -->
  <header class="site-header py-3">
    <div class="container d-flex align-items-center gap-3 px-4">
      <div class="brand-badge">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5"/>
          <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <h1 class="h4 display-serif mb-0">LuxTime</h1>
    </div>
  </header>

  <!-- Main -->
  <main class="d-flex align-items-center justify-content-center py-5" style="min-height: calc(100vh - 84px);">
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 max-w-lg">
          <div class="text-center mb-4">
            <h2 class="display-serif fw-bold text-white" style="font-size: clamp(1.8rem, 3vw, 2.75rem);">Create New Password</h2>
            <p class="muted-lux mb-0">Your new password must be different from previous passwords</p>
          </div>

          <div class="glass-card">

            <!-- Error Message -->
            <% if (typeof message !== 'undefined' && message) { %>
              <div class="alert alert-danger bg-danger bg-opacity-10 border-danger border-opacity-25 text-danger d-flex align-items-center" role="alert">
                <div><%= message %></div>
              </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success bg-success bg-opacity-10 border-success border-opacity-25 text-success d-flex align-items-center" role="alert">
                <div><%= success %></div>
              </div>
            <% } %>

            <!-- Reset Password Form -->
            <form action="/user/reset-password" method="POST" class="row g-3" novalidate>
              <!-- New Password -->
              <div class="col-12">
                <label class="form-label text-white fw-medium small text-uppercase" style="letter-spacing:.08em;">New Password</label>
                <input
                  type="password"
                  name="password"
                  required
                  minlength="8"
                  placeholder="Enter new password"
                  class="form-control lux"
                />
              </div>

              <!-- Confirm Password -->
              <div class="col-12">
                <label class="form-label text-white fw-medium small text-uppercase" style="letter-spacing:.08em;">Confirm Password</label>
                <input
                  type="password"
                  name="confirmPassword"
                  required
                  minlength="8"
                  placeholder="Confirm new password"
                  class="form-control lux"
                />
              </div>

              <!-- Password Requirements -->
              <div class="col-12 requirements text-luxury-light small muted-lux">
                <p>• Minimum 8 characters</p>
                <p>• Include uppercase, lowercase and a number</p>
              </div>

              <!-- Submit -->
              <div class="col-12 mt-3">
                <button type="submit" class="btn btn-luxury w-100">Reset Password</button>
              </div>
            </form>

            <!-- Back to Login -->
            <div class="text-center mt-3">
              <a href="/user/login" class="muted-lux small text-decoration-none">← Back to Sign In</a>
            </div>
          </div> <!-- glass-card -->
        </div>
      </div>
    </div>
  </main>

  <!-- Optional: include your fallback stylesheet -->
  <link rel="stylesheet" href="/user/css/signup.css">

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Simple client-side confirm password check (optional, non-blocking)
    (function(){
      const form = document.querySelector('form[action="/user/reset-password"]');
      if (!form) return;
      form.addEventListener('submit', (e) => {
        const pw = form.querySelector('input[name="password"]').value || '';
        const cpw = form.querySelector('input[name="confirmPassword"]').value || '';
        if (pw.length < 8) {
          e.preventDefault();
          alert('Password must be at least 8 characters.');
          return;
        }
        if (pw !== cpw) {
          e.preventDefault();
          alert('Passwords do not match.');
          return;
        }
      
      });
    })();
  </script>
</body>
</html>
