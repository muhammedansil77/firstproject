<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Reset Password - LuxTime</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --luxury-gold: #D4AF37;
      --luxury-dark: #0A0A0A;
      --luxury-brown: #1A1612;
      --luxury-accent: #2D2416;
      --luxury-light: #B8A07E;
      --luxury-border: #3D3426;
    }

    html,body { height: 100%; }
    body {
      margin: 0;
      font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: linear-gradient(135deg, var(--luxury-dark) 0%, var(--luxury-brown) 100%);
      color: #fff;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Header */
    .site-header {
      background: rgba(26,22,18,0.6);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(61,52,38,0.35);
      position: sticky;
      top: 0;
      z-index: 1030;
    }
    .brand-badge {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--luxury-gold);
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
    .brand-badge svg { color: var(--luxury-dark); width: 20px; height: 20px; }

    /* Card / glass */
    .glass-card {
      background: rgba(26,22,18,0.6);
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(61,52,38,0.6);
      border-radius: 28px;
      box-shadow: 0 20px 60px -15px rgba(212,175,55,0.15);
      padding: 2.25rem;
    }

    /* Inputs */
    .form-control.lux {
      background: rgba(45,36,22,0.5);
      border: 1px solid rgba(61,52,38,0.6);
      color: #fff;
      border-radius: 12px;
      padding: .9rem 1rem;
    }
    .form-control.lux::placeholder { color: rgba(184,160,126,0.45); }
    .form-control.lux:focus {
      box-shadow: 0 0 0 4px rgba(212,175,55,0.06);
      border-color: var(--luxury-gold);
      outline: none;
    }

    /* Luxury button */
    .btn-luxury {
      background: linear-gradient(135deg,var(--luxury-gold) 0%, #C9A02C 100%);
      color: var(--luxury-dark);
      font-weight: 700;
      border-radius: 12px;
      padding: .9rem 1rem;
      box-shadow: 0 4px 15px rgba(212,175,55,0.3);
      text-transform: uppercase;
      letter-spacing: .08em;
    }
    .btn-luxury:hover { transform: translateY(-1px); box-shadow: 0 8px 30px rgba(212,175,55,0.35); }

    /* Headline serif */
    .display-serif { font-family: 'Cormorant Garamond', serif; }

    .muted-lux { color: rgba(184,160,126,0.95); }

    .max-w-lg { max-width: 780px; }
    @media (min-width: 992px) { .max-w-lg { max-width: 880px; } }

    /* small improvements */
    .requirements p { margin: 0; line-height: 1.4; }
  </style>
</head>

<body>
  <!-- Header -->
  <header class="site-header py-3">
    <div class="container d-flex align-items-center gap-3 px-4">
      <div class="brand-badge">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5"/>
          <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <h1 class="h4 display-serif mb-0">LuxTime</h1>
    </div>
  </header>

  <!-- Main -->
  <main class="d-flex align-items-center justify-content-center py-5" style="min-height: calc(100vh - 84px);">
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 max-w-lg">
          <div class="text-center mb-4">
            <h2 class="display-serif fw-bold text-white" style="font-size: clamp(1.8rem, 3vw, 2.75rem);">Create New Password</h2>
            <p class="muted-lux mb-0">Your new password must be different from previous passwords</p>
          </div>

          <div class="glass-card">

            <!-- Error Message -->
            <% if (typeof message !== 'undefined' && message) { %>
              <div class="alert alert-danger bg-danger bg-opacity-10 border-danger border-opacity-25 text-danger d-flex align-items-center" role="alert">
                <div><%= message %></div>
              </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success bg-success bg-opacity-10 border-success border-opacity-25 text-success d-flex align-items-center" role="alert">
                <div><%= success %></div>
              </div>
            <% } %>

            <!-- Reset Password Form -->
            <form action="/user/reset-password" method="POST" class="row g-3" novalidate>
              <!-- New Password -->
              <div class="col-12">
                <label class="form-label text-white fw-medium small text-uppercase" style="letter-spacing:.08em;">New Password</label>
                <input
                  type="password"
                  name="password"
                  required
                  minlength="8"
                  placeholder="Enter new password"
                  class="form-control lux"
                />
              </div>

              <!-- Confirm Password -->
              <div class="col-12">
                <label class="form-label text-white fw-medium small text-uppercase" style="letter-spacing:.08em;">Confirm Password</label>
                <input
                  type="password"
                  name="confirmPassword"
                  required
                  minlength="8"
                  placeholder="Confirm new password"
                  class="form-control lux"
                />
              </div>

              <!-- Password Requirements -->
              <div class="col-12 requirements text-luxury-light small muted-lux">
                <p>• Minimum 8 characters</p>
                <p>• Include uppercase, lowercase and a number</p>
              </div>

              <!-- Submit -->
              <div class="col-12 mt-3">
                <button type="submit" class="btn btn-luxury w-100">Reset Password</button>
              </div>
            </form>

            <!-- Back to Login -->
            <div class="text-center mt-3">
              <a href="/user/login" class="muted-lux small text-decoration-none">← Back to Sign In</a>
            </div>
          </div> <!-- glass-card -->
        </div>
      </div>
    </div>
  </main>

  <!-- Optional: include your fallback stylesheet -->
  <link rel="stylesheet" href="/user/css/signup.css">

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Simple client-side confirm password check (optional, non-blocking)
    (function(){
      const form = document.querySelector('form[action="/user/reset-password"]');
      if (!form) return;
      form.addEventListener('submit', (e) => {
        const pw = form.querySelector('input[name="password"]').value || '';
        const cpw = form.querySelector('input[name="confirmPassword"]').value || '';
        if (pw.length < 8) {
          e.preventDefault();
          alert('Password must be at least 8 characters.');
          return;
        }
        if (pw !== cpw) {
          e.preventDefault();
          alert('Passwords do not match.');
          return;
        }
        // allow submit — server will still validate
      });
    })();
  </script>
</body>
</html>
