<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify OTP - WatchCo</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      background: #1a1814;
      font-family: "Inter", sans-serif;
      color: white;
    }

    /* Header */
    .header-bar {
      background: #211e11;
      border-bottom: 1px solid #3a3630;
    }
    .brand-icon {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: #edbc2b;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Card */
    .otp-card {
      background: #2a2620;
      border: 1px solid #3a3630;
      border-radius: 20px;
      padding: 2.2rem;
      box-shadow: 0 15px 40px rgba(0,0,0,0.4);
    }

    /* OTP Inputs */
    .code-input {
      width: 55px;
      height: 55px;
      font-size: 26px;
      font-weight: bold;
      text-align: center;
      background: #1a1814;
      border: 2px solid #3a3630;
      border-radius: 12px;
      color: white;
      transition: 0.2s;
    }
    .code-input:focus {
      border-color: #edbc2b !important;
      box-shadow: 0 0 0 4px rgba(237,188,43,0.3);
      outline: none;
    }

    /* Timer */
    .timer { color: #edbc2b; font-weight: bold; }

    /* Resend button */
    #resendBtn {
      opacity: 0.5;
      cursor: not-allowed;
      border: none;
      background: none;
    }
    #resendBtn.enabled {
      opacity: 1;
      cursor: pointer;
    }
    #resendBtn.enabled span {
      text-decoration: underline;
      color: #edbc2b;
    }
  </style>
</head>

<body>

  <!-- Header -->
  <header class="header-bar py-3">
    <div class="container d-flex align-items-center gap-3">
      <div class="brand-icon">
        <svg class="text-dark" width="24" height="24" fill="none" stroke="black" stroke-width="2">
          <circle cx="12" cy="12" r="9"></circle>
          <path d="M12 6v6l4 2" stroke-linecap="round"></path>
        </svg>
      </div>
      <h4 class="fw-bold mb-0">WatchCo</h4>
    </div>
  </header>

  <!-- Main -->
  <main class="d-flex justify-content-center align-items-center py-5" style="min-height: 80vh;">
    <div class="container" style="max-width: 480px;">
      <div class="otp-card">

        <!-- Title -->
        <div class="text-center mb-4">
          <h2 class="fw-bold text-white mb-2">Enter your code</h2>
          <p class="text-secondary">
            We sent a 6-digit code to <strong><%= otpEmail %></strong>
          </p>
        </div>

        <!-- OTP FORM -->
        <form id="otpForm" data-endpoint="/user/verify-forgot-otp">


          <!-- OTP Inputs -->
          <div class="d-flex justify-content-center gap-3 mb-3">
            <input maxlength="1" type="text" class="code-input" required>
            <input maxlength="1" type="text" class="code-input" required>
            <input maxlength="1" type="text" class="code-input" required>
            <input maxlength="1" type="text" class="code-input" required>
            <input maxlength="1" type="text" class="code-input" required>
            <input maxlength="1" type="text" class="code-input" required>
          </div>

          <!-- Timer -->
          <div class="text-center mb-4">
            <p class="text-secondary small">
              Code expires in <span id="timer" class="timer">10:00</span>
            </p>
          </div>

          <!-- Verify Button -->
          <button class="btn w-100 py-3 fw-bold"
                  style="background:#edbc2b;color:#211e11;">
            Verify & Change Password
          </button>
        </form>

        <!-- Resend -->
        <div class="text-center">
          <button id="resendBtn" class="text-secondary small fw-medium">
            Didn't receive the code? <span id="resendText">Resend in 60s</span>
          </button>
        </div>

      </div>
    </div>
  </main>

  <!-- JS -->
  <script>
    const inputs = document.querySelectorAll('.code-input');
    const timerEl = document.getElementById('timer');
    const resendBtn = document.getElementById('resendBtn');
    const resendText = document.getElementById('resendText');
    let timeLeft = 600;

    // Auto focus flow
    inputs.forEach((input, i) => {
      input.addEventListener('input', (e) => {
        e.target.value = e.target.value.replace(/[^0-9]/g, "");
        if (e.target.value && i < 5) inputs[i + 1].focus();
      });
      input.addEventListener('keydown', (e) => {
        if (e.key === "Backspace" && !input.value && i > 0)
          inputs[i - 1].focus();
      });
    });

    // Timer
    function startTimer() {
      clearInterval(window.otpTimer);
      timeLeft = 600;
      timerEl.textContent = "10:00";
      resendBtn.disabled = true;
      resendBtn.classList.remove("enabled");
      resendText.textContent = "Resend in 600s";

      window.otpTimer = setInterval(() => {
        timeLeft--;
        let m = String(Math.floor(timeLeft / 60)).padStart(2, "0");
        let s = String(timeLeft % 60).padStart(2, "0");
        timerEl.textContent = `${m}:${s}`;
        resendText.textContent = `Resend in ${timeLeft}s`;

        if (timeLeft <= 0) {
          clearInterval(window.otpTimer);
          timerEl.textContent = "Expired";
          resendText.innerHTML = "<span>Resend Now</span>";
          resendBtn.disabled = false;
          resendBtn.classList.add("enabled");
        }
      }, 1000);
    }
    startTimer();

    // Submit OTP
    document.getElementById("otpForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const otp = [...inputs].map(i => i.value).join("");

      if (otp.length !== 6) {
        alert("Please enter full 6-digit code");
        return;
      }

      try {
       // change the fetch in the page served by loadForgetVerifyOtpPage
const res = await fetch("/user/verify-forgot-otp", {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  credentials: "include",
  body: JSON.stringify({ otp })
});

        const data = await res.json();

        if (data.success) {
          window.location.href = "/user/reset-password";
        } else {
          alert(data.message || "Invalid OTP");
          inputs.forEach(i => i.value = "");
          inputs[0].focus();
        }
      } catch {
        alert("Network error, try again.");
      }
    });

    // Resend OTP
    resendBtn.addEventListener("click", async () => {
      if (!resendBtn.classList.contains("enabled")) return;

      try {
       const res = await fetch("/user/resend-forgot-otp", { method: "POST", credentials: "include" });


        const data = await res.json();
        alert(data.message || "New OTP sent!");
        startTimer();
      } catch {
        alert("Failed to resend OTP");
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
