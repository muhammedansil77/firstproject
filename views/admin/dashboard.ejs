<!-- views/admin/dashboard.ejs -->
<section style="padding:20px;">
  <header style="padding:12px 0;border-bottom:1px solid #665633;margin-bottom:16px;">
    <h2 style="margin:0;font-size:28px;font-weight:700;">Admin Dashboard Overview</h2>
    <p style="margin:6px 0 0;color:#c6ba93;">Welcome back, <%= (user && user.name) ? user.name : 'Admin' %></p>
  </header>

  <!-- stats (grid) -->
  <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:16px;margin-bottom:18px;">
    <div style="background:#473d23;border-radius:12px;padding:18px;border:1px solid #665633;">
      <div style="font-weight:700;color:#fff;margin-bottom:6px;">Total Sales</div>
      <div style="font-size:20px;font-weight:700;color:#c6ba93;">$250,000</div>
      <div style="color:#2ecc71;">+10%</div>
    </div>

    <div style="background:#473d23;border-radius:12px;padding:18px;border:1px solid #665633;">
      <div style="font-weight:700;color:#fff;margin-bottom:6px;">New Orders</div>
      <div style="font-size:20px;font-weight:700;color:#c6ba93;">120</div>
      <div style="color:#2ecc71;">+5%</div>
    </div>

    <div style="background:#473d23;border-radius:12px;padding:18px;border:1px solid #665633;">
      <div style="font-weight:700;color:#fff;margin-bottom:6px;">Total Customers</div>
      <div style="font-size:20px;font-weight:700;color:#c6ba93;">5,000</div>
      <div style="color:#2ecc71;">+8%</div>
    </div>

    <div style="background:#473d23;border-radius:12px;padding:18px;border:1px solid #665633;">
      <div style="font-weight:700;color:#fff;margin-bottom:6px;">Stock Alerts</div>
      <div style="font-size:20px;font-weight:700;color:#c6ba93;">15</div>
      <div style="color:#f94238;">-2%</div>
    </div>
  </div>

  <!-- recent orders table -->
  <div style="background:#211c11;border:1px solid #665633;border-radius:12px;padding:12px;">
    <h3 style="margin:0 0 12px 0;font-size:18px;font-weight:700;">Recent Orders</h3>
    <div style="overflow-x:auto;">
      <table style="width:100%;border-collapse:collapse;">
        <thead style="background:#473d23;">
          <tr>
            <th style="padding:10px 12px;text-align:left;">Order ID</th>
            <th style="padding:10px 12px;text-align:left;">Customer</th>
            <th style="padding:10px 12px;text-align:left;">Date</th>
            <th style="padding:10px 12px;text-align:left;">Status</th>
            <th style="padding:10px 12px;text-align:left;">Total</th>
          </tr>
        </thead>
        <tbody style="border-top:1px solid #665633;">
          <tr style="border-bottom:1px solid rgba(102,86,51,0.08);">
            <td style="padding:10px 12px;">#12345</td>
            <td style="padding:10px 12px;color:#c6ba93;">Owen Carter</td>
            <td style="padding:10px 12px;color:#c6ba93;">2024-07-26</td>
            <td style="padding:10px 12px;"><span style="display:inline-block;padding:6px 10px;border-radius:8px;background:#473d23;color:#fff;">Shipped</span></td>
            <td style="padding:10px 12px;color:#c6ba93;">$250</td>
          </tr>
          <!-- more rows -->
        </tbody>
      </table>
    </div>
  </div>
</section>
