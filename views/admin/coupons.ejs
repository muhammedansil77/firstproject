<!-- Flash Messages -->
<div class="container-fluid px-0">
    <div class="container-xl">
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show mt-3 shadow-sm border-0" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3"></i>
                    <div class="flex-grow-1">
                        <h6 class="mb-0 fw-bold">Success!</h6>
                        <small><%= success %></small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show mt-3 shadow-sm border-0" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-circle-fill me-3"></i>
                    <div class="flex-grow-1">
                        <h6 class="mb-0 fw-bold">Error!</h6>
                        <small><%= error %></small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid py-4">
    <div class="container-xl">
        <!-- Page Header -->
        <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between mb-5">
            <div class="mb-4 mb-md-0">
                <nav aria-label="breadcrumb" class="d-inline-block">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item"><a href="/admin/dashboard" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Coupons</li>
                    </ol>
                </nav>
                <h1 class="h2 mb-2">Coupon Management</h1>
                <p class="text-muted mb-0">Create, manage, and track discount coupons</p>
            </div>
            <div class="d-flex gap-3">
                <button class="btn btn-light border" onclick="openNewCouponModal()" data-bs-toggle="modal" data-bs-target="#couponModal">
                    <i class="bi bi-plus-lg me-2"></i>New Coupon
                </button>
                <button class="btn btn-primary d-flex align-items-center" onclick="openNewCouponModal()" data-bs-toggle="modal" data-bs-target="#couponModal">
                    <i class="bi bi-tag-fill me-2"></i>
                    <span class="d-none d-md-inline">Create Coupon</span>
                </button>
            </div>
        </div>

        <!-- Statistics Cards -->
