        <!-- Detailed Orders Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Order Details</h5>
                    <span class="badge bg-primary"><%= orders.length %> Orders</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                             <form method="GET" class="d-flex gap-2 mb-3">
  <input
    type="text"
    name="search"
    class="form-control"
    placeholder="Search order, customer, status..."
    value="<%= search %>"
  />
  <button class="btn btn-outline-primary">
    <i class="bi bi-search"></i>
  </button>

  <!-- Keep existing filters -->
  <input type="hidden" name="period" value="<%= filters.period %>">
  <input type="hidden" name="paymentMethod" value="<%= filters.paymentMethod %>">
  <input type="hidden" name="orderStatus" value="<%= filters.orderStatus %>">
</form>
            
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Order ID</th>
                                <th>Date & Time</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th class="text-end">Amount</th>
                                <th>Payment</th>
                                <th>Status</th>
                                <th class="pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (orders.length === 0) { %>
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bi bi-receipt display-4 text-muted opacity-25"></i>
                                        <h4 class="text-muted mt-3 mb-2">No orders found</h4>
                                        <p class="text-muted mb-0">Try changing your filter criteria</p>
                                    </div>
                                </td>
                            </tr>
                            <% } else { %>
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td class="ps-4">
                                        <a href="/admin/orders/<%= order._id %>" class="text-decoration-none fw-semibold">
                                            <%= order.orderNumber %>
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted d-block">
                                            <%= new Date(order.createdAt).toLocaleDateString() %>
                                        </small>
                                        <small class="text-muted">
                                            <%= new Date(order.createdAt).toLocaleTimeString() %>
                                        </small>
                                    </td>
                                    <td>
                                        <% if (order.user) { %>
                                        <div>
                                            <h6 class="mb-1"><%= order.user.name %></h6>
                                            <small class="text-muted d-block"><%= order.user.email %></small>
                                            <% if (order.user.phone) { %>
                                            <small class="text-muted"><%= order.user.phone %></small>
                                            <% } %>
                                        </div>
                                        <% } else { %>
                                        <span class="text-muted">Guest User</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-light text-dark border me-2">
                                                <%= order.items.length %>
                                            </span>
                                            <span class="small">
                                                <%= order.items[0]?.product?.name || 'Product' %>
                                                <% if (order.items.length > 1) { %>
                                                +<%= order.items.length - 1 %> more
                                                <% } %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <h6 class="mb-0 fw-bold">₹<%= order.finalAmount.toLocaleString() %></h6>
                                        <% if (order.couponDiscount > 0) { %>
                                        <small class="text-success">Saved ₹<%= order.couponDiscount %></small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% const paymentBadge = {
                                            'COD': 'secondary',
                                            'Razorpay': 'success',
                                            'Wallet': 'info'
                                        }[order.paymentMethod] || 'secondary'; %>
                                        <span class="badge bg-<%= paymentBadge %>">
                                            <%= order.paymentMethod %>
                                        </span>
                                        <small class="d-block text-muted">
                                            <%= order.paymentStatus %>
                                        </small>
                                    </td>
                                    <td>
                                        <% const statusColors = {
                                            'Placed': 'primary',
                                            'Confirmed': 'info',
                                            'Shipped': 'warning',
                                            'OutForDelivery': 'info',
                                            'Delivered': 'success',
                                            'Cancelled': 'danger'
                                        } %>
                                        <span class="badge bg-<%= statusColors[order.orderStatus] || 'secondary' %>">
                                            <%= order.orderStatus %>
                                        </span>
                                    </td>
                                    <td class="pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/orders/<%= order._id %>" 
                                               class="btn btn-outline-primary" 
                                               data-bs-toggle="tooltip" 
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/admin/invoice/<%= order._id %>" 
                                               class="btn btn-outline-success" 
                                               data-bs-toggle="tooltip" 
                                               title="Download Invoice">
                                                <i class="bi bi-receipt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                    <nav class="mt-3">
  <ul class="pagination justify-content-center">

    <!-- Previous -->
    <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
      <a class="page-link"
         href="?page=<%= pagination.currentPage - 1 %>&search=<%= search %><%= getFilterParams() %>">
        Previous
      </a>
    </li>

    <!-- Page Numbers -->
    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
      <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
        <a class="page-link"
           href="?page=<%= i %>&search=<%= search %><%= getFilterParams() %>">
          <%= i %>
        </a>
      </li>
    <% } %>

    <!-- Next -->
    <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
      <a class="page-link"
         href="?page=<%= pagination.currentPage + 1 %>&search=<%= search %><%= getFilterParams() %>">
        Next
      </a>
    </li>

  </ul>
</nav>

                    
                </div>
            </div>
        </div>
    </div>
